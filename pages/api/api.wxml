<view class="container">
  <view>
    <button bindtap='doLogin'>登录API</button>
    <view>{{loginApiResult}}</view>
  </view>
  <view>
    <button bindtap='doLogic'>业务API（需登录）</button>
    <view>{{logicApiResult}}</view>
  </view>
  <view>
    <button open-type="getUserInfo" bindgetuserinfo="doGetUserInfo">获取用户信息（需登录）</button>
    <view>
      <open-data type="userAvatarUrl"></open-data>
      <open-data type="userNickName"></open-data>
      <view>{{verifySignatureResult}}</view>
    </view>
  </view>
  <view>
    <button bindtap='doPay'>支付API</button>
    <view>{{paymentApiResult}}</view>
  </view>
</view>